<%= render 'shared/title', title: @recipe.name %>
<div class="container">
  <div class="row card card-body bg-light">
    <h4 class="center description"><strong>Steps</strong></h4>
    <hr />
     <div class="col">
       <%= simple_format(@recipe.description) %>
     </div>
    <div class="row align-self-end">
      <div class="col">
      <p><em>Created by:</em></p>
      <p><%= link_to gravatar_for(@recipe.chef), recipe_path %></p>
        <small> <%= @recipe.chef.chefname %></small>
        <p> Created: <%= time_ago_in_words(@recipe.created_at) %> ago</p>
      </div>
    </div>
    <div class="recipe-actions">
      <%= link_to "Edit this Recipe", edit_recipe_path(@recipe), class: "btn btn-sm btn-warning" %>
      <%= link_to "Delete this Recipe", recipe_path(@recipe), method: :delete,
                    data: { confirm: "Are you sure you want to delete this recipe?" },
                    class: "btn btn-sm btn-danger" %>
      <%= link_to "Return to Recipes Index", recipes_path, class: "btn btn-sm btn-primary" %>             
  </div>
</div>
